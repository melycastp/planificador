<h1>Eventos - Mostrar</h1>
<br>
<%= link_to "Nuevo Evento", new_admin_evento_path %>
<br>
<% if notice.present? %>
	<b><%= notice %></b>
<% end %>
<br>
<table>
	<thead>
		<tr>
			<th>Fecha Inicial</th>
			<th>Fecha Final</th>
			<th>Hora Inicial</th>
			<th>Hora Final</th>
			<th>Descripcion</th>
			<th>Importante</th>
			<th>Usuario</th>
			<th>Tipo Evento</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= "#{@evento.fechainicial}"%></td>
			<td><%= "#{@evento.fechafinal}"%></td>
			<td><%= "#{@evento.horainicial}" %></td>
			<td><%= "#{@evento.horafinal}" %></td>
			<td><%= "#{@evento.descripcion}" %></td>
			<td><%= "#{@evento.importante}" %></td>
			<td><%= "#{@evento.usuario}" %></td>
			<td><%= "#{@evento.eventotipo.nombre}" %></td>
		</tr>
	</tbody>	
</table>